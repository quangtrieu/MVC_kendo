@using System.Web.Mvc
@using System.Web.Mvc.Html
@using BCS.Framework.WebExtensions.Label
@using Kendo.Mvc.UI
@model BCS.Framework.Models.ForgotModel
@{
    ViewBag.Title = "Forgot Password - Smart Systems Pro";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<style>
    .form-horizontal .form-group{
        margin-left: 0px !important;
    }
</style>

<div class="col-xs-12">
    <div class="form-group">
        <br /><br /><br /><br /><br />
        <div class="text-center" style="font-size: 22pt; font-weight: normal; color: #FFF">FORGOT PASSWORD</div>
        <br /><br />
    </div>
</div>
<div class="clearfix"></div>
@using (Html.BeginForm("Forgot", "Security", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "logon-form form-horizontal", id = "frm-fogot" }))
 {
    <div class="" style="height:420px; width:850px; margin: 0 auto;background: #FFF;-moz-border-radius: 2em">
        <div class="row" style="padding: 15px;-moz-border-radius: 1em">
            <div class="col-xs-7">
                    <div class="error">
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <p>If you need help resetting you password, we can help by sending you a link to rest it.</p>
                            <li>Enter either the email address and captcha on the account.</li>
                            <li>Click Send.</li>
                            <li>Check your inbox for a password reset email.</li>
                            <li>Click on the URL provided in the email and enter a new password .</li>
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelForRequire(model => model.Email, new { @class = "col-xs-2 txt-right", style = "margin-top:8px" })
                        <div class="col-xs-10">
                            @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control" })
                            <span class="error">@Html.ValidationMessageFor(model => model.Email)</span>
                        </div>
                    </div>
                    <div class="form-group" style="padding-top: 10px;">
                        @Html.LabelForRequire(model => model.Sum, new { @class = "col-xs-2 txt-right", style = "margin-top: 8px" })
                        <div class="col-xs-10">
                            <div class="col-xs-6" style="margin-left: -15px">
                                @Html.TextBoxFor(model => model.Sum, new { placeholder = "Sum", @class = "form-control" })
                            </div>
                            <div class="col-xs-6">
                                <img alt="Captcha" src="@Url.Action("CaptchaImage")" style="" />
                            </div>
                            <div style="clear: both"></div>
                            <span class="error">@Html.ValidationMessageFor(model => model.Sum)</span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group logon-toolbar">
                        <div class="col-xs-12" align="center"><input type="submit" class="btn btn-primary button btnOk" id="btnForgot" value=" Send " style="width:150px" /></div>
                    </div>
                     <br />
                    <div class="form-group text-center">
                        @Html.ActionLink("Back To Sign In", "Login", "Security", new { @class = "button btnForgot"})
                    </div>
            </div>
            <div class="col-xs-5" style="border-left: 1px solid darkolivegreen;">
                <div class="form-group">
                    <b>Already have Smart System Pro account ?</b>
                </div>
                <div class="form-group">
                    <span>Click Sign Up button to access Budget Creator</span>
                </div>
                <br /><br />
                <div class="form-group text-center">
                    <input type="button" class="btn btn-primary button btnOk" id="btnSignUp" value="Sign Up" style="width:150px" />
                </div>
                <br /><br />
                <div class="form-group">
                    <span><b>Having trouble?</b> Feel free to contact us</span>
                </div>
                <br />
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-primary button btnOk" id="btnContactUs" value="Contact us" style="width:150px" />
                </div>
                <div class="form-group"></div>
                <div class="form-group"></div>
                <div class="form-group"></div>
            </div>
        </div>
    </div>
 }
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnForgot").click(function () {
            var form = $("#frm-fogot");
            form.validate();
            var isValid = form.valid();
            if (isValid) {
                return showProcessing();
            }
        });
    });
</script>


