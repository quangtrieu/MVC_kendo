@using System.Web.Mvc
@using System.Web.Mvc.Html
@using BCS.Framework.WebExtensions.Label
@model BCS.Framework.Models.ForgotModel
@{
    ViewBag.Title = "Forgot Password - Budget Creator";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}


<div class="col-xs-12">
    <div class="form-group">
        <br /><br /><br /><br /><br />
        <div class="text-center" style="font-size: 22pt; font-weight: normal; color: #FFF">FORGOT PASSWORD</div>
        <br /><br />
    </div>
</div>
<div class="clearfix"></div>
<div class="" style="height:420px; width:850px; margin: 0 auto;background: #FFF;-moz-border-radius: 2em">
    <div class="row" style="padding: 10px;-moz-border-radius: 1em">
        <div class="col-xs-7">
            @using (Html.BeginForm("Forgot", "Security", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "logon-form form-horizontal", id = "frm-fogot" }))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-xs-12" style="color: blue">
                        <p>An email has been sent with reset password instructions.</p>
                        <br />
                    </div>
                </div>
                <br />
                <div class="form-group logon-toolbar">
                    <div class="col-xs-12" align="center">@Html.ActionLink("Back To Sign In", "Login", "Security", new { @class = "btn btn-primary button btnOk", @style = "width:150px", @onclick = "return showProcessing();" })</div>
                </div>
            }
        </div>
        <div class="col-xs-5" style="border-left: 1px solid darkolivegreen">
            <div class="form-group">
                <b>Already have Smart System Pro account ?</b>
            </div>
            <div class="form-group">
                <span>Click Sign Up button to access Budget Creator</span>
            </div>
            <br /><br />
            <div class="form-group text-center">
                <input type="button" class="btn btn-primary button btnOk" id="btnSignUp" value="Sign Up" style="width:150px" />
            </div>
            <br /><br />
            <div class="form-group">
                <span><b>Having trouble?</b> Feel free to contact us</span>
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" class="btn btn-primary button btnOk" id="btnContactUs" value="Contact us" style="width:150px" />
            </div>
            <div class="form-group"></div>
            <div class="form-group"></div>
        </div>
    </div>
</div>


